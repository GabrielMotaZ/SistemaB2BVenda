@model SistemaVendas.Application.ViewModels.LoginViewModel

@{
	ViewData["Title"] = "UpdateLogin";
}

<h3>Update login</h3>


<div class="formConteiner">
	<form asp-action="UpdateLogin" asp-route-id="@Model.Email" id="myForm">

		<div class="loginPassword">

			<div class="row">
				<div class="col-sm">
					<div class="form-group">
						<input asp-for="Email" type="text" class="inputLogin" placeholder="Usuario" readonly>
						<div style="text-align:center;">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>						
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm">
					<div class="form-group">
						<input asp-for="Senha" type="password" class="inputLogin" placeholder="Old password" name="Senha">
						@*<div style="text-align:center;">
							<span asp-validation-for="Senha" class="text-danger"></span>
						</div>*@
						
					</div>
				</div>
			</div>
	
			<div class="row">
				<div class="col-sm">
					<div class="form-group">
						<input asp-for="newPassword" type="password" class="inputLogin" placeholder="New password" name="newPassword">
						<div style="text-align:center;">
							<span asp-validation-for="newPassword" class="text-danger"></span>
						</div>
						
					</div>
				</div>
			</div>

			@if (TempData["InfoMessage"] != null)
			{
				<p class="alert text-center" style="color: darkred;">@TempData["InfoMessage"] </p>
			}


			<div class="form-group" style="text-align:center;">
				<input type="submit" value="Save" class="btn btn-primary btn-block" />
				<a asp-action="Login" type="button" class="btn btn-secondary">Back to List</a>

			</div>

		</div>
	</form>
</div>




@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
