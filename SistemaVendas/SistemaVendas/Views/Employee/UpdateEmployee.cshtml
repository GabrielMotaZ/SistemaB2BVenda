@model SistemaVendas.ViewModels.EmployeeViewModel

@{
    Layout = null;
}

<div class="container">
<div class="row">
    <div class="col-md-12">
			<form asp-action="UpdateEmployee" asp-route-id="@Model.IdFunc" id="myForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


				<div class="row">
					<div class="col-sm">
						<div class="form-group">
							<label asp-for="nome" class="control-label"></label>
							<input asp-for="nome" class="form-control" name="nome" />
							<span asp-validation-for="nome" class="text-danger"></span>
						</div>
					</div>

					<div class="col-sm">
						<div class="form-group col-md-5">
							<label asp-for="sexo" class="control-label"></label>
							@*<input asp-for="sexo" class="form-control" name="sexo" />*@
								<select asp-for="sexo" asp-items="@ViewBag.sexo" class="form-control" name="sexo"></select>
							<span asp-validation-for="sexo" class="text-danger"></span>
						</div>
					</div>

					<div class="col-sm">

						<div class="form-group">
							<label asp-for="cpf" class="control-label"></label>
							<input asp-for="cpf" class="form-control" name="cpf" />
							<span asp-validation-for="cpf" class="text-danger"></span>
						</div>
					</div>
				</div>


				<div class="row">
					<div class="col-sm">

						<div class="form-group">
							<label asp-for="email" class="control-label"></label>
							<input asp-for="email" class="form-control" name="email" />
							<span asp-validation-for="email" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-sm">

						<div class="form-group">
							<label asp-for="endereco" class="control-label"></label>
							<input asp-for="endereco" class="form-control" name="endereco" />
							<span asp-validation-for="endereco" class="text-danger"></span>
						</div>
					</div>
				</div>


				<div class="row">
					<div class="col-sm">

						<div class="form-group">
							<label asp-for="telefone" class="control-label"></label>
							<input asp-for="telefone" class="form-control" name="telefone" />
							<span asp-validation-for="telefone" class="text-danger"></span>
						</div>
					</div>

					<div class="col-sm">
						<div class="form-group">
							<label asp-for="turno" class="control-label"></label>
							@*<input asp-for="turno" class="form-control" name="turno" />*@
								<select asp-for="turno" asp-items="@ViewBag.turno" class="form-control" name="turno"></select>
							<span asp-validation-for="turno" class="text-danger"></span>
						</div>
					</div>

					<div class="col-sm">
						<div class="form-group">
							<label asp-for="DataContratado" class="control-label"></label>
							<input asp-for="DataContratado" class="form-control" name="DataContratado" />
							<span asp-validation-for="DataContratado" class="text-danger"></span>
						</div>
					</div>
				</div>

				<hr />
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
				</div>


        </form>
    </div>
</div>
</div>

<script>
	$(document).ready(function () {
		$("#myForm").validate({
			rules: {
				nome: {
					required: true,
					// Outras regras de validação específicas, se necessário
				},
				email: {
					required: true,
					email: true // Verifica se o valor é um endereço de e-mail válido
				},
				sexo: {
					required: true,
				},
				cpf: {
					required: true,
					digits: true,
				},
				endereco: {
					required: true,
				},
				telefone: {
					required: true,
					digits:	true,
				},
				turno: {
					required: true,
					
				},
				DataContratado: {
					required: true,
					
				},
				// Defina regras para outros campos, se necessário
			},
			messages: {
				nome: {
					required: "O campo Nome é obrigatório."
				},
				email: {
					required: "O campo Email é obrigatório.",
					email: "Por favor, insira um endereço de e-mail válido."
				},
				sexo: {
					required: "Campo Obrigatorio."
				},
				cpf: {
					required: "Campo Obrigatorio.",
					digits: "Somente numeros."
				},
				endereco: {
					required: "Obrigatorio."
				},
				telefone: {
					required: "Campo Obrigatorio.",
					digits: "Somente numeros."
				},
				turno: {
					required: "Campo Obrigatorio.",
					
				},
				DataContratado: {
					required: "Campo Obrigatorio.",
					
				}
				// Mensagens de erro para outros campos, se necessário
			}
		});
	});


	$("#myForm").submit(function (event) {
		if (!$(this).valid()) {
			event.preventDefault(); // Impede o envio do formulário se a validação falhar
		}
	});

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

