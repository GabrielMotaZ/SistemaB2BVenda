@model SistemaVendas.ViewModels.EmployeeViewModel

@{
	ViewData["Title"] = "CreateEmployee";
	
}


<div class="container">
<hr />
<div class="row">
	<div class="col-md-12">
		<form asp-action="CreateEmployee" asp-route-id="@Model" onsubmit="return jQueryAjaxPost(this);">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="row">
				<div class="col-sm">
					<div class="form-group">
						<label asp-for="nome" class="control-label"></label>
						<input asp-for="nome" class="form-control" name="nome"/>
						<span asp-validation-for="nome" class="text-danger"></span>
					</div>
				</div>

				<div class="col-sm">
					<div class="form-group">
						<label asp-for="sexo" class="control-label"></label>
						<input asp-for="sexo" class="form-control" name="sexo" />
						<span asp-validation-for="sexo" class="text-danger"></span>
					</div>
				</div>

				<div class="col-sm">

					<div class="form-group">
						<label asp-for="cpf" class="control-label"></label>
						<input asp-for="cpf" class="form-control" name="cpf" />
						<span asp-validation-for="cpf" class="text-danger"></span>
					</div>
				</div>
			</div>


			<div class="row">
				<div class="col-sm">

					<div class="form-group">
						<label asp-for="email" class="control-label"></label>
						<input asp-for="email" class="form-control" name="email" />
						<span asp-validation-for="email" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-sm">

					<div class="form-group">
						<label asp-for="endereco" class="control-label"></label>
						<input asp-for="endereco" class="form-control" name="endereco" />
						<span asp-validation-for="endereco" class="text-danger"></span>
					</div>
				</div>
			</div>


			<div class="row">
				<div class="col-sm">

					<div class="form-group">
						<label asp-for="telefone" class="control-label"></label>
						<input asp-for="telefone" class="form-control" name="telefone" />
						<span asp-validation-for="telefone" class="text-danger"></span>
					</div>
				</div>

				<div class="col-sm">
					<div class="form-group">
						<label asp-for="turno" class="control-label"></label>
						<input asp-for="turno" class="form-control" name="turno" />
						<span asp-validation-for="turno" class="text-danger"></span>
					</div>
				</div>

				<div class="col-sm">
					<div class="form-group">
							<label asp-for="DataContratado" class="control-label"></label>
							<input asp-for="DataContratado" class="form-control" name="data_contratado" />
							<span asp-validation-for="DataContratado" class="text-danger"></span>
					</div>
				</div>
			</div>

			<hr/>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary btn-block" />
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
			</div>
		</form>
	</div>
</div>
</div>

@*data-bs-dismiss="modal"*@

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
